  .hero-section {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--beige);
    position: relative;
    overflow: hidden;
    padding: 2rem;
  }
  
  .hero-content {
    max-width: 68rem;
    margin: 0 auto;
    position: relative;
    z-index: 2;
    opacity: 0;
    animation: fadeIn 1s ease-out forwards;
    padding: 4rem 2rem;
    text-align: center;
  }
  
  .subtitle {
    font-family: var(--font-secondary);
    color: var(--naranja-principal);
    font-size: 0.9rem;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    margin-bottom: 2rem;
    display: block;
    font-weight: 500;
  }
  
  .title {
    font-family: var(--font-primary);
    color: var(--gris-oscuro);
    font-size: clamp(2.2rem, 4vw, 3.2rem);
    line-height: 1.3;
    margin-bottom: 2.5rem;
    position: relative;
    font-weight: 500;
    padding-bottom: 1.5rem;
  }
  
  .title::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 1px;
    background: var(--naranja-principal);
  }
  
  .description {
    font-family: var(--font-secondary);
    color: var(--gris-oscuro);
    font-size: clamp(1rem, 2vw, 1.15rem);
    line-height: 1.8;
    margin-bottom: 3rem;
