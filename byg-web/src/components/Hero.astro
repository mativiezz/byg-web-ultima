    margin-left: auto;
    margin-right: auto;
    font-weight: 400;
  }
  
  .cta-button {
    display: inline-flex;
    align-items: center;
    padding: 1rem 2.8rem;
    background-color: var(--naranja-principal);
    color: white;
    font-family: var(--font-secondary);
    font-weight: 500;
    font-size: 1rem;
    border-radius: 3px;
    position: relative;
    overflow: hidden;
    transition: all 0.3s ease;
    text-decoration: none;
    letter-spacing: 0.5px;
  }
  
  .cta-button:hover {
    transform: translateY(-2px);
    background-color: #e44512;
  }
  
  .decorative-element {
    position: absolute;
    top: -5%;
    right: -5%;
    width: 30rem;
    height: 30rem;
    background: var(--naranja-claro);
    border-radius: 50%;
    opacity: 0.08;
    transform: rotate(-15deg);
  }
  
  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
  
  @media (max-width: 768px) {
    .hero-section {
      padding: 1rem;
    }
    
    .hero-content {
      padding: 2rem 1rem;
    }
    
    .decorative-element {
      width: 20rem;
      height: 20rem;
    }
    
    .title {
      padding-bottom: 1rem;
    }
    
    .description {
      font-size: 1rem;
      line-height: 1.6;
    }
    
    .cta-button {
      padding: 0.9rem 2rem;
    }
  }
</style>

