<style>
:root {
  --naranja-principal: #F05523;
  --naranja-claro: #FFE6DD;
  --gris-oscuro: #2C3E50;
  --beige: #FDF6F2;
  --font-primary: 'Playfair Display', serif;
  --font-secondary: 'Lato', sans-serif;
  --transition-default: all 0.3s ease-in-out;
}

.footer {
  background: linear-gradient(to right, var(--beige), white);
  font-family: var(--font-secondary);
  padding: 4rem 0;
  line-height: 1.6;
}

.footer-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 2rem;
}

.footer-grid {
  display: grid;
  grid-template-columns: 1fr repeat(4, 1fr);
  gap: 3rem;
  align-items: start;
}

.footer-brand {
  padding-right: 2rem;
}

.footer-logo {
  display: block;
  margin-bottom: 1.5rem;
  transition: var(--transition-default);
}

.footer-logo img {
  height: 40px;
  width: auto;
}

.footer-contact {
  font-size: 0.9rem;
  color: var(--gris-oscuro);
  margin-top: 1.5rem;
}

.footer-contact p {
  margin: 0.5rem 0;
}

.footer-section {
  display: flex;
  flex-direction: column;
}

.footer-heading {
  font-family: var(--font-primary);
  font-size: 1.2rem;
  font-weight: 600;
  color: var(--naranja-principal);
  margin-bottom: 1.5rem;
  padding-bottom: 0.5rem;
  border-bottom: 2px solid var(--naranja-claro);
  min-height: 2.4em;
  display: flex;
  align-items: flex-start;
  white-space: nowrap;
  line-height: 1.2;
}

.footer-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 0.8rem;
}

.footer-link {
  color: var(--gris-oscuro);
  text-decoration: none;
  font-size: 0.9rem;
  line-height: 1.4;
  transition: var(--transition-default);
  display: inline-block;
  padding: 0.2rem 0;
}

.footer-link:hover {
  color: var(--naranja-principal);
  transform: translateX(0.5rem);
}

.footer-bottom {
  margin-top: 4rem;
  padding-top: 2rem;
  border-top: 1px solid rgba(44, 62, 80, 0.1);
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.footer-copyright {
  color: var(--gris-oscuro);
  font-size: 0.9rem;
}

.footer-social {
  display: flex;
  gap: 1.5rem;
}

.social-link {
  color: var(--naranja-principal);
  transition: var(--transition-default);
}

.social-link:hover {
  color: var(--gris-oscuro);
  transform: translateY(-3px);
}

.social-link svg {
  height: 24px;
  width: 24px;
}

@media (max-width: 1024px) {
  .footer-grid {
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }
  
  .footer-brand {
    grid-column: 1 / -1;
    text-align: center;
    padding-right: 0;
  }
  
  .footer-heading {
    white-space: normal;
    min-height: auto;
  }
  
  .footer-logo {
    margin: 0 auto 1.5rem;
  }
}

@media (max-width: 768px) {
  .footer-grid {
    grid-template-columns: repeat(2, 1fr);
  }
}

@media (max-width: 480px) {
  .footer-grid {
    grid-template-columns: 1fr;
  }
  
  .footer-section {
    text-align: center;
  }
  
  .footer-bottom {
    flex-direction: column;
    gap: 1.5rem;
    text-align: center;
  }
}
</style>

